<Window x:Class="CheckersGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersGame"
        xmlns:ctx="clr-namespace:CheckersGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="Images\PresentationBackground.png"/>
    </Window.Background>
    <StackPanel VerticalAlignment="Center" Margin="10,210,10,89" Height="120">
        <Button Name="Help" Content="Help" Click="Help_Click" HorizontalAlignment="Center" Width="200" Height="40" FontSize="22" Background="Cornsilk"/>
        <Button Name="PlayGame" Content="Play" Click="PlayGame_Click" HorizontalAlignment="Center" Width="200" Height="40" FontSize="22" Margin="0,10" Background="Cornsilk"/>
    </StackPanel>
</Window>
